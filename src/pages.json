{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
			"^Fan(.*)": "@/components/Fan$1.vue"
		}
	},
	"pages": [{
			"path": "pages/start/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/login/login",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/message/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/chat/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/postdetails/postdetails",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/postdetails/topicdetails",
			"style": {
				"navigationStyle": "custom",
				"app-plus": {
					"animationType": "fade-in",
					"animationDuration": 50
				}
			}
		},
		{
			"path": "pages/search/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/testPages/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/alipayLogin/index",
			"style": {
				"navigationStyle": "custom"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "小帆社区",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8",
		"titleView": false,
		"animationType": "fade-in",
		"animationDuration": 50,
		// 将回弹属性关掉
		"bounce": "none",
		"scrollIndicator": "none"
	},
	"condition": {
		"current": 0,
		"list": [{
			"name": "",
			"path": "",
			"query": ""
		}]
	},
	"subPackages": [{
		"root": "pagesUserInfo",
		"pages": [{
				"path": "settings",
				"style": {
					"navigationBarTitleText": "设置"
				}
			},
			{
				"path": "profile",
				"style": {
					"navigationStyle": "custom",
					"navigationBarTextStyle": "white",
					"navigationBarTitleText": "个人信息页"
				}
			},
			{
				"path": "color",
				"style": {
					"navigationStyle": "custom",
					"navigationBarTextStyle": "white",
					"navigationBarTitleText": "主题色修改"
				}
			},
			{
				"path": "avatar",
				"style": {
					"navigationStyle": "custom",
					"navigationBarTitleText": "头像修改"
				}
			}
		],
		"preloadRule": {
			"pages/my/my": {
				"network": "all",
				"packages": [
					"pagesUserInfo"
				]
			}
		}
	}]
}
